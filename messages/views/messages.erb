<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body class="<%=@body_class%>">

    <div class="header">My Messages</div>

    <!-- <div id="message-stream"> -->
    <div id="message-float">
      <%@messages.reverse.each do |msg|%>

      <div class="message">
        <a href="/delete/<%=msg.id%>" class="close"></a>
        <div class="from">
          <%= "#{msg[:from]} messaged #{msg[:to]}" %>
        </div>
        <div class="content">
          <%= msg[:content] %>
        </div>
        <div class="time">
          <%= msg[:created_at].strftime("%b %e, %l:%M %p") %>
        </div>
      </div>
      <% end %>
    </div>
    <div id="form-float">
      <div class="message">
        <a href="#" class="submit">SUBMIT</a>
        <p>Hi there</p>
      </div>
    </div>
  </body>
</html>
