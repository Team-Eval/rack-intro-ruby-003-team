<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body class="<%= @body_class %>">

    <div class="header">My Messages</div>

    <div id="message-stream">
      <%
        @messages.reverse.each do |m|
      %>

      <div class="message">
        <a href="/delete/<%= m.id %>" class="close"></a>
        <div class="from">
          From: <%= m.from %>
        </div>
        <div class="to">
          To: <%= m.to %>
        </div>
        <div class="content">
        </div>
          <%= m.content %>
        <div class="time">
          <%= m.created_at.strftime("%b %e, %l:%M %p") %>
        </div>
      </div>
      <% end %>

    </div>
  </body>
</html>
